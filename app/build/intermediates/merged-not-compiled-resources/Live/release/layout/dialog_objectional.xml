<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/size_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextRegular.Black.size14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:text="@string/enter_discription"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_short_discription"
        style="@style/edittext_style_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginRight="@dimen/size_8dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/size_16dp"
        android:hint="@string/enter_discription"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minLines="4"
        android:padding="@dimen/size_14dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/size_12dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel"
            style="@style/TextRegular.PrimaryColor.size18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_20dp"
            android:text="@string/cancel"
            android:textColor="@color/red" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_send"
            style="@style/TextRegular.PrimaryColor.size18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_20dp"
            android:text="@string/send" />

    </LinearLayout>
</LinearLayout>