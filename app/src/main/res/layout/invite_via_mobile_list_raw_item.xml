<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_12dp">

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cb_select"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                style="@style/TextRegular.SecondaryGreen.size16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="John Martine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_country"
                    style="@style/country_code_picker_style"
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_30dp"
                    android:cursorVisible="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/size_8dp"
                    android:focusableInTouchMode="false"
                    android:hint="+1"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_email"
                    style="@style/TextRegular.Gray.size14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    tools:text="JohnMartine123@gmail" />
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_checkbox"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:text="@string/add"
            android:textColor="@drawable/selectable_color"
            android:textSize="@dimen/size_16sp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/size_20dp"
            android:layout_centerInParent="true"
            android:paddingVertical="@dimen/size_4dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_gravity="bottom"
        android:background="@color/pinkish_grey" />
</LinearLayout>
