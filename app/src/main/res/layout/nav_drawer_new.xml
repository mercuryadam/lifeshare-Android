<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/color_turtle_green"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:padding="@dimen/size_4dp"
                    android:src="@drawable/ic_close_white" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/size_80dp"
                    android:layout_height="@dimen/size_80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_placeholder" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    style="@style/TextRegular.White.size24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="Static Name
" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/logout"
                    style="@style/TextRegular.PrimaryColor.size14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:gravity="center"
                    android:padding="@dimen/size_12dp"
                    android:text="Log out"
                    android:textColor="@color/logout_button_color" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_home"
                    style="@style/TextRegular.White.size18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:padding="@dimen/size_8dp"
                    android:text="@string/home" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_profile"
                    style="@style/TextRegular.White.size18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:padding="@dimen/size_8dp"
                    android:text="@string/my_profile" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_my_connections"
                    style="@style/TextRegular.White.size18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:padding="@dimen/size_8dp"
                    android:text="@string/my_connections" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_invitations"
                    style="@style/TextRegular.White.size18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:padding="@dimen/size_8dp"
                    android:text="@string/invitations" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_report"
                    style="@style/TextRegular.White.size18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:padding="@dimen/size_8dp"
                    android:text="@string/reports"
                    android:visibility="gone" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_bottom_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/size_8dp"
            android:scaleType="fitXY"
            android:src="@drawable/nav_bottom" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/size_120dp"
            android:layout_height="@dimen/size_120dp"
            android:layout_above="@+id/iv_bottom_image"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginBottom="-50dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_about_lifeshare"
            style="@style/TextRegular.White.size18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/size_24dp"
            android:padding="@dimen/size_12dp"
            android:text="@string/about_lifeshare" />
    </RelativeLayout>

</LinearLayout>