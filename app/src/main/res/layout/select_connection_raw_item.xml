<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_12dp"
    android:layout_marginTop="@dimen/size_8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profile"
            android:orientation="vertical"
            android:padding="@dimen/size_16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                style="@style/TextRegular.Black.size16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="John Martine" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_email"
                style="@style/TextRegular.Gray.size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6dp"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="JohnMartine123@gmail" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_contact"
                style="@style/TextRegular.Gray.size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6dp"
                android:ellipsize="end"
                android:visibility="gone"
                android:singleLine="true"
                tools:text="992446385" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_checkbox"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:text="@string/add"
            android:textSize="@dimen/size_16sp"
            android:textColor="@drawable/selectable_color"
            android:layout_marginTop="@dimen/size_24dp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/size_20dp"
            android:paddingVertical="@dimen/size_4dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:background="@color/pinkish_grey" />

</LinearLayout>
