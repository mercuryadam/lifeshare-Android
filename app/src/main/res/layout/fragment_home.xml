<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ui.HomeFragment">

    <include layout="@layout/app_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_friends_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar_new"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextMedium.SecondaryGreen.size18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_16dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:text="@string/live_broadcast" />

        <com.lifeshare.customview.recyclerview.FilterRecyclerView
            android:id="@+id/rv_friend_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_no_friend_streaminig"
            style="@style/TextRegular.Black.size14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/size_20dp"
            android:padding="@dimen/size_20dp"
            android:text="@string/no_live_streaming_message"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_connection_streaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_friends_broadcast"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_marginTop="@dimen/size_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_adv_id">
            </com.google.android.gms.ads.AdView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPost"
                style="@style/TextMedium.SecondaryGreen.size18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adView"
                android:layout_marginTop="@dimen/size_12dp"
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:text="@string/posts" />

            <com.lifeshare.customview.recyclerview.FilterRecyclerView
                android:id="@+id/rvPosts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvPost"
                android:layout_marginHorizontal="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_12dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
