<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlFullRaw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size_0_8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            app:cardCornerRadius="@dimen/size_8dp"
            app:contentPadding="@dimen/size_0dp">

            <ImageView
                android:id="@+id/ivBackGround"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_document" />

        </androidx.cardview.widget.CardView>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChannelName"
            style="@style/TextRegular.Black.size14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2dp"
            android:maxLines="2"
            android:minLines="2"
            android:layout_toEndOf="@id/cvImage"
            android:layout_toStartOf="@id/ivDeleteArchive"
            android:layout_margin="@dimen/size_4dp"
            tools:text="Chirag Patel" />

        <ImageView
            android:id="@+id/ivDeleteArchive"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/size_2dp"
            android:layout_marginEnd="@dimen/size_2dp"
            android:src="@drawable/ic_delete_red" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_marginVertical="@dimen/size_4dp"
        android:background="@color/pinkish_grey"/>

</LinearLayout>