<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.show_broadcast.MessageFragment">

    <include layout="@layout/app_toolbar"/>

    <LinearLayout
        android:id="@+id/rl_viewers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar_new"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvToolbarTitle"
            style="@style/TextMedium.Black.size18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_12dp"
            android:text="@string/live_chat" />

        <LinearLayout
            android:id="@+id/llCountViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextRegular.White.size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/size_8dp"
                android:background="@drawable/dashboard_button_background_red_5"
                android:text="@string/live" />

            <ImageView
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:src="@drawable/eye_black"
                android:layout_marginHorizontal="@dimen/size_8dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCountViewer"
                style="@style/TextMedium.Black.size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextMedium.Black.size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4dp"
                android:gravity="center"
                android:text="@string/viewer" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_margin="@dimen/size_16dp"
        android:padding="@dimen/size_6dp"
        android:visibility="gone"
        android:layout_below="@+id/rl_viewers"
        android:src="@drawable/ic_flag" />

    <ImageView
        android:layout_width="@dimen/size_200dp"
        android:layout_height="@dimen/size_200dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0.3"
        android:visibility="gone"
        android:src="@drawable/app_logo" />

    <com.lifeshare.customview.recyclerview.FilterRecyclerView
        android:id="@+id/rv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_message"
        android:layout_marginRight="@dimen/size_60dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_chat"
        style="@style/button_style_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/size_12dp"
        android:paddingLeft="@dimen/size_30dp"
        android:paddingRight="@dimen/size_30dp"
        android:layout_below="@+id/rl_viewers"
        android:singleLine="true"
        android:text="Save Chat"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:layout_weight="1"
            android:elevation="@dimen/size_12dp"
            android:backgroundTint="@color/blue_gray"
            app:cardCornerRadius="@dimen/size_24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_message"
                    style="@style/edittext_message_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/size_30dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_marginRight="@dimen/size_30dp"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:gravity="left|top"
                    android:hint="@string/comment"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:background="@color/blue_gray"
                    android:padding="@dimen/size_12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primary_green"
                    app:cardCornerRadius="@dimen/size_24dp">

                    <ImageView
                        android:id="@+id/iv_send_message"
                        android:layout_width="@dimen/size_80dp"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/size_12dp"
                        android:src="@drawable/message_icon" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</RelativeLayout>
