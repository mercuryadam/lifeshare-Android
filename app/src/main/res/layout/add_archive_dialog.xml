<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_below="@+id/appbar_new"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAddImage"
                android:layout_width="@dimen/size_80dp"
                android:layout_height="@dimen/size_80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/size_30dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:src="@drawable/ic_plus" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAddLink"
            style="@style/edittext_style_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16dp"
            android:hint="@string/link"
            android:padding="@dimen/size_14dp"
            android:singleLine="true"
            android:visibility="gone"
            android:textColorHint="@color/gray" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAddTitle"
            style="@style/edittext_style_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16dp"
            android:hint="@string/title"
            android:padding="@dimen/size_14dp"
            android:singleLine="true"
            android:textColorHint="@color/gray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddChannelArchive"
            style="@style/button_style_dark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_46dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:singleLine="true"
            android:text="@string/share"
            android:textStyle="bold"
            android:textAllCaps="false" />


    </LinearLayout>
</RelativeLayout>