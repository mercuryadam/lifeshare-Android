    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorSwitchEnabled</item>
        <item name="colorSwitchThumbNormal">@color/colorSwitchDesable</item>
        <item name="android:colorButtonNormal">@color/colorSwitchDesable</item>
        <item name="android:colorForeground">@color/colorSwitchDesable</item>
    </style>

    <style name="progress_dialog_text_style" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

    <style name="button_style" parent="TextRegular.White.size16">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:elevation">@dimen/size_4dp</item>
    </style>

    <style name="button_style_dark" parent="TextRegular.White.size16">
        <item name="android:background">@drawable/button_background_dark</item>
        <item name="android:elevation">@dimen/size_4dp</item>
    </style>

    <style name="button_style_light" parent="TextRegular.White.size16">
        <item name="android:background">@drawable/button_background_lighty</item>
        <item name="android:textColor">@color/color_turtle_green</item>
        <item name="android:elevation">@dimen/size_2dp</item>
    </style>

    <style name="edittext_style" parent="TextRegular.Black.size16">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:elevation">@dimen/size_4dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="edittext_style_new" parent="TextRegular.Black.size16">
        <item name="android:background">@drawable/button_background_lighty</item>
        <item name="android:elevation">@dimen/size_2dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="country_code_picker_style" parent="TextRegular.Black.size16">
        <item name="android:background">@drawable/country_code_square_background</item>
    </style>

    <style name="edittext_message_style" parent="TextRegular.Black.size14">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/size_0dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="InvitationDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Search_Style" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:queryBackground" tools:targetApi="lollipop">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/size_2dp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/size_16dp</item>
    </style>

    <style name="BottomSheet_Title_Style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_18dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/black_transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
